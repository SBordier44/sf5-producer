{% extends 'base.html.twig' %}

{% block title %}Inscription{{ parent() }}{% endblock %}

{% block body %}
    <section class="py-2 bg-light">
        <div class="container">
            <div class="row px-4 px-lg-5 py-lg-4 align-items-center">
                <div class="col-12">
                    <h3 class="h3 text-uppercase mb-0 text-center section-title">Inscription</h3>
                    <h6 class="h6 text-center text-muted">
                        {% if role == 'producer' %}En tant que producteur{% else %}En tant que consommateur{% endif %}
                    </h6>
                </div>
            </div>
        </div>
    </section>
    <section>
        <div class="container">
            <div class="row mb-5">
                <div class="col-6 my-auto mx-auto">
                    {{ form_start(form) }}
                    {{ form_rest(form) }}
                    <div class="col-12 d-inline">
                        <button class="btn btn-sm btn-primary float-left" type="submit">
                            S'inscrire
                        </button>
                        <a href="{{ path('security_login') }}" class="btn btn-sm btn-outline-dark float-right">
                            <i class="fas fa-sign-in-alt mr-2"></i>Se connecter
                        </a>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
