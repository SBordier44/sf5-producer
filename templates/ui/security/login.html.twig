{% extends 'base.html.twig' %}

{% block title %}Connexion{{ parent() }}{% endblock %}

{% block body %}
    <section class="py-2 bg-light">
        <div class="container">
            <div class="row px-4 px-lg-5 py-lg-4 align-items-center">
                <div class="col-12">
                    <h3 class="h3 text-uppercase mb-0 text-center section-title">Connexion</h3>
                </div>
            </div>
        </div>
    </section>
    <section>
        <div class="container">
            <div class="row mb-5">
                <div class="col-6 my-auto mx-auto">
                    <form method="post" name="login">
                        {% if error %}
                            <div class="alert alert-danger"
                                 role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <div class="form-group">
                            <label for="email" class="font-weight-bold">Votre Email</label>
                            <input class="form-control" type="email" name="email" id="email"
                                   value="{{ last_username }}"
                                   autofocus
                                   autocomplete required>
                        </div>
                        <div class="form-group">
                            <label for="password" class="font-weight-bold">Votre Mot de passe</label>
                            <input class="form-control" type="password" name="password" id="password" required>
                        </div>
                        <div class="form-group custom-control custom-checkbox">
                            <input type="checkbox" id="remember_me" name="_remember_me"
                                   class="custom-control-input" checked/>
                            <label for="remember_me" class="custom-control-label font-weight-bold font-italic">Se
                                souvenir de moi</label>
                        </div>
                        <div class="justify-content-between align-content-between">
                            <button class="btn btn-sm btn-primary float-left" type="submit">
                                <i class="fas fa-sign-in-alt mr-2"></i>Connexion
                            </button>
                            <a href="{{ path('security_forgotten_password') }}"
                               class="btn btn-sm btn-outline-dark float-right">
                                Mot de passe oubli√© ?
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
